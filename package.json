{
  "name": "linter-js-yaml",
  "version": "1.3.0",
  "description": "Linter plugin for YAML, using js-yaml",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-js-yaml.git"
  },
  "homepage": "https://github.com/AtomLinter/linter-js-yaml",
  "license": "MIT",
  "activationHooks": [
    "language-yaml:grammar-used"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "./lib/linter-js-yaml",
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint .",
    "test": "atom --test spec"
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.0.1",
    "js-yaml": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@commitlint/travis-cli": "^6.1.3",
    "@semantic-release/apm-config": "^2.0.1",
    "husky": "^0.14.3",
    "semantic-release": "^15.1.7",
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jasmine-fix": "^1.3.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "env": {
      "node": true
    },
    "globals": {
      "atom": true
    }
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
