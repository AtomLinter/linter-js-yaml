{
  "name": "linter-js-cloudformation-yaml",
  "version": "1.0.0",
  "description": "Linter plugin for YAML, using js-yaml",
  "repository": "https://github.com/AtomLinter/linter-js-cloudformation-yaml.git",
  "homepage": "https://github.com/AtomLinter/linter-js-cloudformation-yaml",
  "license": "MIT",
  "activationCommands": [],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "./lib/linter-js-cloudformation-yaml.js",
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "^8.0.0",
    "atom-package-deps": "^4.0.1",
    "cloudformation-js-yaml-schema": "0.0.5",
    "js-yaml": "^3.5.4"
  },
  "devDependencies": {
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-plugin-import": "^1.14.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "atom": true
    }
  }
}
