{
  "name": "linter-js-cloudformation-yaml",
  "version": "2.0.1",
  "description": "Linter plugin for YAML, using js-yaml",
  "repository": "https://github.com/yyolk/linter-js-cloudformation-yaml.git",
  "homepage": "https://github.com/yyolk/linter-js-cloudformation-yaml",
  "license": "MIT",
  "activationHooks": [
    "language-yaml:grammar-used"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "./lib/linter-js-cloudformation-yaml.js",
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "^8.0.0",
    "atom-package-deps": "^4.0.1",
    "cloudformation-js-yaml-schema": "0.0.5",
    "js-yaml": "^3.5.4"
  },
  "devDependencies": {
    "eslint": "^3.9.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.1.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "env": {
      "node": true
    },
    "globals": {
      "atom": true
    }
  }
}
